<div class="container mt-3">
  <div class="row w-75 mx-auto">
    <form class="modal-body" method="post" action="/restaurants/{{restaurant._id}}/edit">
      <div>
        <label class="form-label" for="">餐廳名稱 :</label>
        <input type="text" class="form-control" name="name" id="name" required value="{{restaurant.name}}">
      </div>
      <div>
        <label for="">英文名稱 :</label>
        <input type="text" class="form-control" name="name_en" id="name_en" value="{{restaurant.name_en}}">
      </div>
      <div>
        <label for="">分類 :</label>
        <input type="text" class="form-control" name="category" id="category" value="{{restaurant.category}}">
      </div>
      <div>
        <label for="">地址 :</label>
        <input type="text" class="form-control" name="location" id="location" value="{{restaurant.location}}">
      </div>
      <div>
        <label for="">google_map_url :</label>
        <input type="text" class="form-control" name="google_map" id="google_map" value="{{restaurant.google_map}}">
      </div>
      <div>
        <label for="">電話 :</label>
        <input type="text" class="form-control" name="phone" id="phone" value="{{restaurant.phone}}">
      </div>
      <div>
        <label for="">評分 :</label>
        <input type="number" name="rating" class="form-control" id="rating" min="1" max="5" step="0.1"
          value="{{restaurant.rating}}">
      </div>
      <div>
        <label for="">圖片Url :</label>
        <input type="text" class="form-control" name="image" id="image" value="{{restaurant.image}}">
      </div>
      <div>
        <label for="">介紹 :</label>
        <textarea class="form-control" name="description" id="description" rows="5" cols="50"
          wrap="soft">{{restaurant.description}}</textarea>
      </div>

      <div class="d-flex justify-content-end">
        <a href="/"><button type="button" class="btn btn-secondary m-2" data-bs-dismiss="modal">取消</button></a>
        <button type="submit" class="btn btn-primary m-2 ">儲存</button>
      </div>

    </form>
  </div>
</div>